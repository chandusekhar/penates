@model Penates.Models.ViewModels.DC.InternalDistributionCenterViewModel

@{
    ViewBag.Title = "Product Form";
}
<!doctype html>
<html>
<head>
    <title>@Html.Resource("Title")</title>
    <meta charset="utf-8">
    <link href="~/Content/forms/images-sizes.css" rel="stylesheet" /> <!--Para hacer resize de las Imagenes-->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-background.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-extension.css" rel="stylesheet" />
</head>

<body>
    <div class="container">
        <h2>@Html.Resource("Title")</h2>
        <div class="form-horizontal" id="internal-DC-form">
            <fieldset>
                <legend></legend>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">@Html.DisplayNameFor(m => m.DistributionCenterID):</label>
                        <div class="col-lg-4">
                            <p>@Model.DistributionCenterID</p>
                        </div>
                    </div>
                <!-- City -->
                <fieldset id="product-form-sizeinfo" name="product-form-sizeinfo">
                    <legend>@Html.Resource("CityInfo"):</legend>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">@Html.Resource("Country"):</label>
                        <div class="col-lg-4">
                            <p>@Model.CountryName</p>
                        </div>
                        <label class="col-lg-2 control-label">@Html.Resource("State"):</label>
                        <div class="col-lg-4">
                            <p>@Model.StateName</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">@Html.DisplayNameFor(m => m.CityID):</label>
                        <div class="col-lg-4">
                            <p>@Model.CityName</p>
                        </div>
                        <label class="col-lg-2 control-label">@Html.DisplayNameFor(m => m.Address):</label>
                        <div class="col-lg-4">
                            <p>@Model.Address</p>
                        </div>
                    </div><br>
                </fieldset>
                <div class="form-group">
                    <label class="col-lg-2 control-label">* @Html.DisplayNameFor(m => m.Telephone):</label>
                    <div class="col-lg-4">
                        <p>@Model.Telephone</p>
                    </div>
                </div>

                <!-- Size Info -->
                <fieldset id="product-form-sizeinfo" name="product-form-sizeinfo">
                    <legend>@Resources.FormsResources.SizeInfo:</legend>
                    <div class="form-group">
                        <label class="col-lg-1 control-label">* @Resources.FormsResources.Depth:</label>
                        <div class="col-lg-3">
                                <p>@Html.DisplayFor(m => m.Depth) m</p>
                        </div>
                        <label class="col-lg-1 control-label">* @Resources.FormsResources.Width:</label>
                        <div class="col-lg-3">
                                <p>@Html.DisplayFor(m => m.Width) m</p>
                        </div>
                        <label class="col-lg-1 control-label">* @Resources.FormsResources.Height:</label>
                        <div class="col-lg-3">
                                <p>@Html.DisplayFor(m => m.Height) m</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">* @Resources.FormsResources.Size:</label>
                        <div class="col-lg-4">
                                <p>@Html.DisplayFor(m => m.Size) m3</p>
                        </div>
                        <label class="col-lg-2 control-label">* @Html.DisplayNameFor(m => m.Floors):</label>
                        <div class="col-lg-4">
                            <p>@Model.Floors</p>
                        </div>
                    </div>
                    <br>
                </fieldset>

                <!-- Capacity Info -->
                <fieldset id="product-form-sizeinfo" name="product-form-sizeinfo">
                    <legend>@Resources.FormsResources.CapacityInfo:</legend>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">@Resources.FormsResources.Capacity:</label>
                        <div class="col-lg-2">
                                <p>@Html.DisplayFor(m => m.Size) m3</p>
                        </div>
                        <label class="col-lg-2 control-label">@Html.DisplayNameFor(m => m.UsedSpace):</label>
                        <div class="col-lg-2">
                                <p>@Html.DisplayFor(m => m.UsedSpace) m3</p>
                        </div>
                        <label class="col-lg-2 control-label">@Html.DisplayNameFor(m => m.UsedPercentage):</label>
                        <div class="col-lg-2">
                                <p>@Html.DisplayFor(m => m.UsedPercentage) %</p>
                        </div>
                    </div>
                    <br>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">@Html.DisplayNameFor(m => m.UsableSpace):</label>
                        <div class="col-lg-2">
                                <p>@Html.DisplayFor(m => m.UsableSpace) m3</p>
                        </div>
                        <label class="col-lg-2 control-label">@Html.DisplayNameFor(m => m.UsableUsedSpace):</label>
                        <div class="col-lg-2">
                                <p>@Html.DisplayFor(m => m.UsableUsedSpace) m3</p>
                        </div>
                        <label class="col-lg-2 control-label">@Html.DisplayNameFor(m => m.UsableSpacePercentage):</label>
                        <div class="col-lg-2">
                                <p>@Html.DisplayFor(m => m.UsableSpacePercentage) %</p>
                        </div>
                    </div>
                </fieldset>
                <br>
                <div class="btn-toolbar center-block">
                    @Html.ActionLink(@Resources.FormsResources.Ok, "Index", "DistributionCenterABM", null, new { @class = "btn btn-primary", @id = "Ok" })
                    @Html.ActionLink(@Resources.FormsResources.Edit, "EditInternalForm", "DistributionCenterForms", new { DistributionCenterID = Model.DistributionCenterID}, new { @class = "btn btn-default", @id = "Edit" })
                    @Html.ActionLink(@Html.Resource("AddDeposits"), "Index", "DepositsForms", new { DistributionCenterID = Model.DistributionCenterID}, new { @class = "btn btn-default", @id = "ViewDeposits", @onclick = "sessionStorage.clear();"})
                    @Html.ActionLink(@Html.Resource("ViewDeposits"), "Index", "DepositsABM", new { SelectedValue = Model.DistributionCenterID }, new { @class = "btn btn-default", @id = "ViewDeposits", @onclick = "sessionStorage.clear();" })
                    @Html.ActionLink(@Html.Resource("AddTemporalDeposits"), "Index", "TemporaryDepositsForms", new { DistributionCenterID = Model.DistributionCenterID }, new { @class = "btn btn-default", @id = "ViewTemporalDeposits", @onclick = "sessionStorage.clear();" })
                    @Html.ActionLink(@Html.Resource("ViewTemporalDeposits"), "Index", "TemporaryDepositsABM", new { SelectedValue = Model.DistributionCenterID }, new { @class = "btn btn-default", @id = "ViewTemporalDeposits", @onclick = "sessionStorage.clear();" })
                </div>
            </fieldset>
        </div>
    </div>
</body>
</html>